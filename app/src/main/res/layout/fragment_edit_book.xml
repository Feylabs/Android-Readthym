<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/id_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:text="Edit Book"/>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/thumbnails"
                    android:layout_width="181dp"
                    android:layout_height="248dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumbnail_book" />

            </androidx.cardview.widget.CardView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldTitle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomStart="@dimen/dimen_20dp"
                app:boxCornerRadiusTopEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusTopStart="@dimen/dimen_20dp"
                android:hint="Judul Buku">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldOverview"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomStart="@dimen/dimen_20dp"
                app:boxCornerRadiusTopEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusTopStart="@dimen/dimen_20dp"
                android:hint="Overview Buku">

                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldCategory"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusBottomStart="@dimen/dimen_20dp"
                app:boxCornerRadiusTopEnd="@dimen/dimen_20dp"
                app:boxCornerRadiusTopStart="@dimen/dimen_20dp"
                android:hint="Kategori Buku">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Penulis Saat Ini : "
                android:textAlignment="viewStart"
                android:textColor="@color/color_main"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_penulis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Penulis"
                android:textAlignment="viewStart"
                android:textColor="@color/color_main"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Ganti Penulis  : "
                android:textAlignment="viewStart"
                android:textColor="@color/color_main"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerWritter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Foto Buku"
                android:textAlignment="viewStart"
                android:textColor="@color/color_main"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_baseline_edit_24"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/AmbilGambar"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_cf"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Buku (PDF)"
                android:textAlignment="viewStart"
                android:textColor="@color/color_main"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_take_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_baseline_edit_24"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/inter_regular"
                android:text="File Buku"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_cf"
                android:textSize="15sp" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="90dp"
                android:layout_marginTop="@dimen/dimen_20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="@dimen/dimen_20dp"
                    android:backgroundTint="@color/pink_book"
                    android:text="Simpan Buku"
                    app:cornerRadius="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/loading_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-690dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave_login"
        android:elevation="-999dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>